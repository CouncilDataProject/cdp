#!/usr/bin/env python

from cdpprocessor.io import pipelines
from cdpprocessor.utils import seattle
from pprint import pprint
import pathlib
import json

# TODO:
# ensure pathlib is used for all path

def main():
    root = pathlib.Path("/home/")

    with open(root / "config.json", "r") as _config:
        config = json.load(_config)

    pprint(config)

    print("-" * 80)

    city = "seattle"
    s_bodies = pipelines.BodyPipe(city, seattle.body_name_shortener)
    pprint(s_bodies.short_names)

if __name__ == "__main__":
    main()
